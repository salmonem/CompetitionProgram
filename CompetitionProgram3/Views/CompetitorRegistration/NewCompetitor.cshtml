@model CompetitorsModel
@{
    ViewData["Title"] = "New Competitor Registration";
}

<h2>New Competitor Registration</h2>

<form asp-controller="competitorregistration" asp-action="NewCompetitor" method="post">

    <table>
        <tbody>
            <tr>
                <td><label asp-for="FirstName">Enter your First Name:</label></td>
                <td><input asp-for="FirstName" /></td>
            </tr>
            <tr>
                <td><label asp-for="LastName">Enter your Last Name:</label></td>
                <td><input asp-for="LastName" /></td>
            </tr>
            <tr>
                <td><label asp-for="TeamName">Enter your Team Name:</label></td>
                <td><input asp-for="TeamName" /></td>
            </tr>
            <tr>
                <td><label asp-for="BirthDate">Enter your Birthdate(YYYY-MM-DD):</label></td>
                <td><input asp-for="BirthDate" /></td>
            </tr>
            <tr>
                <td><label asp-for="TeamName">Enter your Team Name:</label></td>
                <td><input asp-for="TeamName" /></td>
            </tr>
            <tr>
                <label asp-for="Gender">Select Gender:</label>
                <select asp-for="Gender" asp-items="CompetitorsModel.GenderChoice"></select>
            </tr>
            <tr>
                <td><label asp-for="TeamName">Enter your Team Name:</label></td>
                <td><input asp-for="TeamName" /></td>
            </tr>
            <tr>
                <td><input type="submit" value="Register" /></td>
            </tr>
        </tbody>
    </table>

</form>